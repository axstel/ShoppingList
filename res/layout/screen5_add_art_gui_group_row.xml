<?xml version="1.0" encoding="utf-8"?>
<TableLayout
android:id="@+id/widget0"
android:layout_width="fill_parent"
android:layout_height="60dp"
xmlns:android="http://schemas.android.com/apk/res/android"
android:background="@color/background_list">

    <TableRow android:gravity="center" >
		<TextView
		android:id="@+id/txt_kategorie"
		android:layout_width="270px"
		android:layout_height="60dp"
		android:text="Kategorie"
		android:layout_x="31px"
		android:layout_y="17px"
		android:textSize="18dip"           
        android:textStyle="bold"
		android:layout_marginLeft="60px"
        android:layout_marginRight="5px"
        android:gravity="center_vertical"
        android:textColor="@color/list_txt">
		</TextView>
				
		<ImageButton
		    android:id="@+id/btn_edit"
		    android:layout_width="38dp"
		    android:layout_height="38dp"
		    android:layout_x="335px"
		    android:layout_y="7px" 
		    android:background="@drawable/edit_button"
		    android:layout_marginLeft="5px"
        	android:layout_marginRight="5px">
		
		</ImageButton>
				
		<ImageButton
		    android:id="@+id/btn_del"
		    android:layout_width="38dp"
		    android:layout_height="38dp"
		    android:layout_x="401px"
		    android:layout_y="7px" 
		    android:background="@drawable/del_button"
		    android:layout_marginLeft="5px"
        	android:layout_marginRight="5px">
		
		</ImageButton>
	</TableRow>
</TableLayout>
