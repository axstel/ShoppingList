<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70px"
    android:background="@color/background_list">

    <TextView
        android:id="@+id/labelname"
        android:layout_width="wrap_content"
        android:layout_height="70px"
        android:layout_marginTop="6px"
        android:lines="1"
        android:layout_marginLeft="20px"
        android:gravity="center" 
        android:orientation="vertical"
        android:textSize="18dip"           
        android:textStyle="bold"
        android:textColor="@color/list_txt" >

    </TextView>
    
    <Button
        android:id="@+id/btn_edititem"
        android:layout_width="12pt" 
		android:layout_height="12pt" 
        android:layout_alignParentRight="true"
        android:layout_marginTop="16px"
        android:layout_marginBottom="6px"
        android:layout_marginLeft="4px"
        android:layout_marginRight="10px"
        android:gravity="center" 
        android:orientation="vertical"
        android:drawableBottom="@drawable/ic_edit"
        android:background="@drawable/button_edit" />
    
    <Button
        android:id="@+id/btn_deleteitem"
        android:layout_width="12pt" 
		android:layout_height="12pt" 
        android:layout_toLeftOf="@+id/btn_edititem"
        android:layout_marginTop="16px"
        android:layout_marginBottom="6px"
        android:layout_marginLeft="4px"
        android:layout_marginRight="10px"
        android:drawableBottom="@android:drawable/ic_delete"
        android:background="@drawable/button_edit" />

</RelativeLayout>