<?xml version="1.0" encoding="utf-8"?>
<TableLayout
android:id="@+id/widget0"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>

    <TableRow android:gravity="left" >

        <TextView
            android:id="@+id/txt_article"
            android:layout_width="170px"
            android:layout_height="38px"
            android:text="Artikel" 
            android:layout_marginRight="15px"
            android:layout_marginLeft="15px"
            android:gravity="center_vertical"/>
        
		<EditText
		    android:id="@+id/edittxt_menge"
		    android:layout_width="70px"
		    android:layout_height="70px"
		    android:layout_x="100dp"
		    android:layout_y="6dp"
		    android:text="editMenge"
		    android:textSize="18sp" 
		    android:gravity="center_vertical">
		
		    <requestFocus />
		</EditText>
		
		<TextView
		    android:id="@+id/txt_einheit"
		    android:layout_width="120px"
		    android:layout_height="38px"
		    android:layout_x="196dp"
		    android:layout_y="15dp"
		    android:text="Einheit" 
		    android:layout_marginRight="10px"
            android:layout_marginLeft="15px"
            android:gravity="center_vertical"/>

		<!-- <ImageButton
		    android:id="@+id/btn_del"
		    android:layout_width="38dp"
		    android:layout_height="38dp"
		    android:background="@drawable/del_button" /> -->
		
	</TableRow>

</TableLayout>
